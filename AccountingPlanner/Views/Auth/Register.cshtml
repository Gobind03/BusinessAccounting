@model AccountingPlanner.Models.Auth.RegistrationModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="logo-w">
    <a href="index.html"><img alt="" src="~/img/logo-big.png"></a>
</div>

<h4 class="auth-header">
    Registration Form
</h4>

<form asp-action="Register">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @if (!string.IsNullOrEmpty(Convert.ToString(ViewData["ErrorMessage"])))
    {
        <div class="alert alert-danger"><strong>Oops!</strong> @ViewData["ErrorMessage"]</div>
    }
    @if (!string.IsNullOrEmpty(Convert.ToString(ViewData["SuccessMessage"])))
    {
        <div class="alert alert-success"><strong>Registered!</strong> @ViewData["SuccessMessage"]</div>
    }
    <div class="form-group">
        <label asp-for="name" class="control-label"></label> &nbsp;
        <span asp-validation-for="name" class="text-danger"></span>
        <input asp-for="name" class="form-control" placeholder="Enter Full Name" />
        <div class="pre-icon os-icon os-icon-user-male-circle"></div>
    </div>
    <div class="form-group">
        <label asp-for="email" class="control-label"></label> &nbsp;
        <span asp-validation-for="email" class="text-danger"></span>
        <input asp-for="email" class="form-control" placeholder="Enter eMail" />
        <div class="pre-icon os-icon os-icon-email-2-at2"></div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label asp-for="password" class="control-label"></label> &nbsp;
                <span asp-validation-for="password" class="text-danger"></span>
                <input asp-for="password" class="form-control" placeholder="Enter Password" />
                <div class="pre-icon os-icon os-icon-fingerprint"></div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label asp-for="cpassword" class="control-label"></label> &nbsp;
                <span asp-validation-for="cpassword" class="text-danger"></span>
                <input asp-for="cpassword" class="form-control" placeholder="Confirm Password" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="buttons-w">
            <input type="submit" value="Register Me" class="btn btn-primary" />
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
